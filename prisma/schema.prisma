generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Parcela {
  id        String     @default(cuid()) @id
  latitud     Int
  longitud    Int
  m2        Int
  address   String
}

model History {
  id        String       @default(cuid()) @id
  pid       String
  m2used    Int
  m3        Int
  address   String
  date      DateTime   @default(now())
  @@index([address, date(sort: Desc)])
}



model User {
  id            String       @default(cuid()) @id
  name          String?
  email         String?   
  address       String?   
  isAdmin       Boolean @default(false) @map("is_admin")  
  @@map(name: "users")
  @@index([address])
}